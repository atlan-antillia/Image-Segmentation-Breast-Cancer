; train_eval_infer_basnet_hybrid_loss.config
; 2023/5/22 antillia.com

[model]
image_width    = 256
image_height   = 256
image_channels = 3
num_classes    = 1
base_filters   = 16
num_layers     = 6
dropout_rate   = 0.08
learning_rate  = 0.001
loss           = "basnet_hybrid_loss"
metrics        = ["dice_coef", "sensitivity", "specificity"]
show_summary   = False

[train]
epochs        = 100
batch_size    = 4
patience      = 10
metrics       = ["dice_coef", "val_dice_coef"]
model_dir     = "./basnet_models"
eval_dir      = "./basnet_eval"
image_datapath = "./Breast-Cancer/train/malignant/images/"
mask_datapath  = "./Breast-Cancer/train/malignant/masks/"

[eval]
image_datapath = "./Breast-Cancer/test/malignant/images/"
mask_datapath  = "./Breast-Cancer/test/malignant/masks/"

[infer] 
images_dir     = "./mini_test" 
output_dir     = "./basnet_mini_test_output"

[mask]
blur      = True
binarize  = True
threshold = 150

